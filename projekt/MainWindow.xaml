<Window x:Class="projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projekt"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontSize="16"
        FontFamily ="./fonts/#Lato"
        Title="Pogoda" Height="450" Width="800" Background="#FFEAEAEA">
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#262930" Grid.ColumnSpan="2" ClipToBounds="True" Width="250" HorizontalAlignment="Left">
        </Border>

        <TextBox x:Name="TBCity" Padding="6" HorizontalAlignment="Left" Height="30" Margin="16,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" RenderTransformOrigin="0.5,0.5" FontFamily="Tahoma" Grid.ColumnSpan="2">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.551"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.24"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBlock x:Name="labCondition" HorizontalAlignment="Left" Height="30" Margin="15,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Background="{x:Null}"  IsEnabled="False" Grid.ColumnSpan="2" Foreground="White"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Height="30" Margin="92,22,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click"  Grid.Column="1"/>
        <TextBlock x:Name="labSunrise" HorizontalAlignment="Left" Height="30" Margin="52,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Background="{x:Null}" IsEnabled="False" Grid.ColumnSpan="2" Foreground="White"/>

        <Image Source="/img/rainy-day.png" HorizontalAlignment="Left" Height="64" Margin="10,78,0,0" VerticalAlignment="Top" Width="64" Grid.Column="1"></Image>

        <Image Source="/img/sunrise.png" HorizontalAlignment="Left" Height="32" Margin="10,226,0,0" VerticalAlignment="Top" Width="32"></Image>
        <Image Source="/img/sunset.png" HorizontalAlignment="Left" Height="32" Margin="10,276,0,0" VerticalAlignment="Top" Width="32"></Image>
        <Image Source="/img/wind.png" HorizontalAlignment="Left" Height="32" Margin="10,373,0,0" VerticalAlignment="Top" Width="32" RenderTransformOrigin="-0.095,1.862"></Image>
        <Image Source="/img/pressure.png" HorizontalAlignment="Left" Height="32" Margin="10,326,0,0" VerticalAlignment="Top" Width="32"></Image>

        <TextBlock x:Name="labSunset" HorizontalAlignment="Left" Height="30" Margin="52,276,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Background="{x:Null}" IsEnabled="False" Grid.ColumnSpan="2" Foreground="White"/>
        <TextBlock x:Name="labPressure" HorizontalAlignment="Left" Height="30" Margin="52,328,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Background="{x:Null}" IsEnabled="False" Grid.ColumnSpan="2" Foreground="White"/>
        <TextBlock x:Name="labWindSpeed" Opacity="100" HorizontalAlignment="Left" Height="30" Margin="52,375,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"  IsEnabled="False" Grid.ColumnSpan="2" Foreground="White" Visibility="Visible"  Background="{x:Null}"/>

        <Image Height="100" Width="100" Grid.Column="2" Grid.ColumnSpan="2" Margin="320,162,320,172" OpacityMask="#FFF50000" VerticalAlignment="Top" Visibility="Visible"/>
    </Grid>
</Window>
